{
  "name": "speed-read",
  "displayName": "Speed read",
  "version": "0.0.1",
  "description": "Speed read any article on the web.",
  "author": "Jonathan Hu",
  "scripts": {
    "dev": "plasmo dev",
    "dev:firefox": "plasmo dev --target=firefox-mv2",
    "build": "plasmo build && plasmo build --target=firefox-mv2",
    "build:chrome": "plasmo build",
    "build:firefox": "plasmo build --target=firefox-mv2",
    "package": "plasmo package && plasmo package --target=firefox-mv2",
    "lint": "eslint *.tsx contents/*.ts",
    "lint:fix": "eslint *.tsx contents/*.ts --fix",
    "format": "prettier --check *.tsx *.css *.mjs contents/*.ts",
    "format:fix": "prettier --write *.tsx *.css *.mjs contents/*.ts",
    "typecheck": "tsc --noEmit",
    "validate": "npm run typecheck && npm run lint && npm run format && npm run build"
  },
  "dependencies": {
    "@mozilla/readability": "^0.6.0",
    "@plasmohq/storage": "^1.15.0",
    "plasmo": "0.90.5",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "4.1.1",
    "@types/chrome": "0.0.258",
    "@types/node": "20.11.5",
    "@types/react": "18.2.48",
    "@types/react-dom": "18.2.18",
    "@typescript-eslint/eslint-plugin": "^8.56.0",
    "@typescript-eslint/parser": "^8.56.0",
    "autoprefixer": "^10.4.24",
    "eslint": "^9.39.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "postcss": "^8.5.6",
    "prettier": "3.2.4",
    "tailwindcss": "^3.4.19",
    "typescript": "5.3.3"
  },
  "manifest": {
    "host_permissions": [
      "https://*/*",
      "http://*/*"
    ],
    "permissions": [
      "storage"
    ]
  }
}
